<h1>My Tasks</h1>
<div>
  <% @tasks.each do |task| %>
    <p><%= check_box_tag task.id, '1', task.completed %> <%= link_to label_tag(task.id, task.title), task_path(task) %> <%= link_to '<i class="fa-solid fa-trash"></i>'.html_safe, task_path(task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "link" %></p>
  <% end %>

  <%= link_to '<i class="fa-solid fa-plus"></i> Add a new task'.html_safe, new_task_path, class: "link"  %>
</div>
